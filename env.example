# Agent Ethos Backend Environment Variables
# Copy this file to .env and update values

# Database URL
# SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./agent_ethos.db

# PostgreSQL (production - Railway):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/agent_ethos

# API Configuration
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production

# CORS - Frontend URLs (comma-separated)
# For local development:
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# For production (update with your Vercel URL):
# CORS_ORIGINS=https://agent-ethos.vercel.app,https://your-custom-domain.com

# Environment
ENVIRONMENT=development
# ENVIRONMENT=production

